---
import CreateStories from '@assets/text/create-stories.svg';
import LineTopRight from '@assets/images/line1.svg';
import LineBottomLeft from '@assets/images/line2.svg';
import ContentNieTa from '@assets/text/content-nieta.svg';
import AssistantNieTa from '@assets/images/assistant-nieta.svg';
import Together from '@assets/text/together.svg';
---

<!-- createStories -->
<div class="absolute top-0">
  <img
    src={CreateStories.src}
    alt="CreateStories"
    width={CreateStories.width}
    height={CreateStories.height}
    decoding="async"
    loading="lazy"
  />
</div>

<!-- lines -->
<div class="absolute right-[242px] top-[40px]" id="line">
  <img
    src={LineTopRight.src}
    alt="Line"
    width={LineTopRight.width}
    height={LineTopRight.height}
    decoding="async"
    loading="lazy"
  />
</div>

<!-- text -->
<div class="absolute left-[242px] top-[380px]" id="text">
  <img
    src={ContentNieTa.src}
    alt="ContentNieTa"
    width={ContentNieTa.width}
    height={ContentNieTa.height}
    decoding="async"
    loading="lazy"
    class="text"
  />
</div>

<!-- assistantNieTa -->
<div class="absolute right-[242px] top-[164px]" id="assistantNieTa">
  <img
    src={AssistantNieTa.src}
    alt="AssistantNieTa"
    width={ContentNieTa.width}
    height={ContentNieTa.height}
    decoding="async"
    loading="lazy"
  />
</div>

<!-- lines -->
<div class="absolute left-[246px] bottom-[40px]" id="line1">
  <img
    src={LineBottomLeft.src}
    alt="Line"
    width={LineBottomLeft.width}
    height={LineBottomLeft.height}
    decoding="async"
    loading="lazy"
  />
</div>

<!-- together -->
<div class="absolute right-0 bottom-0" id="together">
  <img
    src={Together.src}
    alt="Together"
    width={Together.width}
    height={Together.height}
    decoding="async"
    loading="lazy"
  />
</div>

<style>
  @media (min-width: 1440px) and (max-width: 1919px) {
    #line,
    #assistantNieTa,
    #together {
      right: 96px;
    }
    #text,
    #line1 {
      left: 96px;
    }

    #together {
      right: 0;
    }
  }
  @media (min-width: 744px) and (max-width: 1439px) {
    #line {
      right: 48px;
    }
    #text {
      top: 164px;
      left: 123px;
      right: 123px;
    }
    #assistantNieTa {
      top: 436px;
      left: 102px;
      right: 102px;
    }
    #together {
      left: 0;
      right: 0;
    }
    #line1 {
      left: 52px;
    }
  }
</style>

<script>
  const contentNieta = document.querySelector('.text') as HTMLImageElement;

  const handleResize = () => {
    const screenWidth = window.innerWidth;
    if (screenWidth >= 744 && screenWidth < 1440) {
      contentNieta.src = '/src/assets/text/content-nieta-744.svg';
    } else if (screenWidth === 1440) {
      contentNieta.src = '/src/assets/text/content-nieta.svg';
    }
  };

  window.addEventListener('resize', handleResize);
  handleResize();
</script>
