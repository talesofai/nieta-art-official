---
import CreateStories from '@assets/text/create-stories.svg';
import LineTopRight from '@assets/images/line1.svg';
import LineBottomLeft from '@assets/images/line2.svg';
import ContentNieTa from '@assets/text/content-nieta.svg';
import ContentNieTa744 from '@assets/text/content-nieta-744.svg';
import AssistantNieTa from '@assets/images/assistant-nieta.svg';
import Together from '@assets/text/together.svg';
import { Image } from 'astro:assets';
---

<!-- createStories -->
<div class="absolute" id="createStories">
  <Image
    src={CreateStories}
    alt="CreateStories"
    width={CreateStories.width}
    height={CreateStories.height}
    decoding="async"
    loading="lazy"
  />
</div>

<!-- lines -->
<div class="absolute" id="line-2-top-right">
  <Image src={LineTopRight} alt="Line" decoding="async" loading="lazy" />
</div>

<!-- text -->
<div class="absolute" id="text-2">
  <Image src={ContentNieTa} alt="ContentNieTa" decoding="async" loading="lazy" />
  <Image src={ContentNieTa744} alt="ContentNieTa744" decoding="async" loading="lazy" />
</div>

<!-- assistantNieTa -->
<div class="absolute" id="assistantNieTa">
  <Image src={AssistantNieTa} alt="AssistantNieTa" decoding="async" loading="lazy" />
</div>

<!-- lines -->
<div class="absolute" id="line-2-bottom-left">
  <Image
    src={LineBottomLeft}
    alt="Line"
    width={LineBottomLeft.width}
    height={LineBottomLeft.height}
    decoding="async"
    loading="lazy"
  />
</div>

<!-- together -->
<div class="absolute" id="together">
  <Image
    src={Together}
    alt="Together"
    width={Together.width}
    height={Together.height}
    decoding="async"
    loading="lazy"
  />
</div>

