---
import Assistant from '@assets/images/assistant-trains.svg';
import LineTopRight from '@assets/images/line3.svg';
import LineBottomRight from '@assets/images/line4.svg';
import TrainsContent from '@assets/text/trains.svg';
import TrainsContent744 from '@assets/text/trains-744.svg';
import UploadModal from './UploadModal.astro';
import LineBottomLeft744 from '@assets/images/line7.svg';
---

<!-- assistant -->
<div class="absolute" id="assistantTrains">
  <img src={Assistant.src} alt="Assistant" decoding="async" loading="lazy" />
</div>

<!-- lines -->
<div class="absolute" id="line-3-top-right">
  <img src={LineTopRight.src} alt="LineTopRight" decoding="async" loading="lazy" />
</div>

<!-- text -->
<div class="absolute" id="text-4">
  <img src={TrainsContent.src} alt="TrainsContent" decoding="async" loading="lazy" class="trains" />
  <img src={TrainsContent744.src} alt="TrainsContent744" decoding="async" loading="lazy" class="trains" />
</div>

<!-- button -->
<div class="absolute" id="button-upload">
  <UploadModal />
</div>

<!-- lines -->
<div class="absolute" id="line-3-bottom-right">
  <img src={LineBottomRight.src} alt="LineBottomRight" decoding="async" loading="lazy" />
  <img src={LineBottomLeft744.src} alt="LineBottomLeft744" decoding="async" loading="lazy" />
</div>

<style></style>

<script>
  const UploadModal = document.querySelector('#UploadModal') as HTMLImageElement;

  UploadModal?.addEventListener('mouseenter', () => {
    UploadModal.src = 'src/assets/button/upload-active.svg';
  });

  UploadModal?.addEventListener('mouseleave', () => {
    UploadModal.src = 'src/assets/button/upload.svg';
  });
</script>
