---
import NieTaContent from '@assets/text/content-nieta2.svg';
import NieTaContent744 from '@assets/text/content-nieta2-744.svg';
import item1 from '@assets/barrage/item1.svg';
import item2 from '@assets/barrage/item2.svg';
import item3 from '@assets/barrage/item3.svg';
import item4 from '@assets/barrage/item4.svg';
import item5 from '@assets/barrage/item5.svg';
import item6 from '@assets/barrage/item6.svg';
import item7 from '@assets/barrage/item7.svg';
import item8 from '@assets/barrage/item8.svg';
import item9 from '@assets/barrage/item9.svg';
import item10 from '@assets/barrage/item10.svg';
const BarrageList = [item1, item2, item3, item4, item5];

const BarrageList2 = [item6, item7, item8, item9, item10];
---

<!-- text -->
<div class="absolute" id="text-3">
  <img src={NieTaContent.src} alt="NieTaContent" decoding="async" loading="lazy" class="text2" />
  <img src={NieTaContent744.src} alt="NieTaContent744" decoding="async" loading="lazy" class="text2" />
</div>

<div class="absolute" id="barrage-container">
  <!-- barrage -->
  <div class="flex barrage-1">
    {
      BarrageList.map((item) => (
        <div class="barrage-item">
          <img src={item.src} alt="barrage" decoding="async" loading="lazy" />
        </div>
      ))
    }
  </div>

  <!-- barrage -->
  <div class="flex barrage-2">
    {
      BarrageList2.map((item) => (
        <div class="barrage-item">
          <img src={item.src} alt="barrage" decoding="async" loading="lazy" />
        </div>
      ))
    }
  </div>
</div>
