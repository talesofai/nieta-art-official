---
import StartNieTa from '@assets/button/start-nieta.svg';
import IconBeta from '@assets/button/icon-beta.svg';
import { Image } from 'astro:assets';
---

<Image src={StartNieTa} alt="StartNieTa" decoding="async" loading="lazy" class="cursor-pointer" id="StartNieTa" />
<Image src={IconBeta} alt="" decoding="async" loading="lazy" class="cursor-pointer" id="IconBeta" />

<script>
  import { VolcengineSDK } from '@utils/web-tracker';

  const StartNieTa = document.querySelector('#StartNieTa');
  VolcengineSDK.event('nieta_official.start.click');
  setTimeout(() => {
    StartNieTa?.addEventListener('click', () => {
      window.open('https://app.nieta.art/?channel_from=nieta_art_official', '_self');
    });
  }, 150);
</script>
